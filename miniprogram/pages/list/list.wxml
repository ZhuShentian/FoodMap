<cu-custom bgColor="bg-gradual-pink" isCustom="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">{{friendsIndex=='self'?'我的美食列表':"好友的美食列表"}}</view>
</cu-custom>
<block wx:if="{{storesArr.length!=0}}">
	<view class="cu-bar search bg-white">
		<view class='search-form round'>
			<text class="cuIcon-search" />
			<input type="text" placeholder="搜索美食店铺" value="{{defaultSearchValue}}" bindinput="storeSearch" confirm-type="search" />
			<text class="cuIcon-roundclose" bindtap="clearSearch" />
    	</view>
  	</view>
	  <checkbox-group bindchange="chooseItem">
	  		<view class="cu-list menu-avatar">
				<view wx:for="{{stores}}" wx:key="_id" class="cu-item {{modalName=='move-box-'+ index?'move-cur':''}}" bindtouchstart="ListTouchStart" bindtouchmove="ListTouchMove" bindtouchend="ListTouchEnd"  data-target="move-box-{{index}}">
					<view  bind:tap="toInfo" id="{{item.id}}" class="cu-avatar radius lg">
						<image class="cu-avatar radius lg" src="{{item.images.length==0?defaultImage:item.images[0]}}" mode="aspectFill" lazy-load="false" binderror="" bindload=""></image>
					</view>
					<view class="content" bind:tap="toInfo" id="{{item.id}}">
						<view class="text-black">{{item.name}}</view>
						<view class="text-gray text-sm">
							<text class="cuIcon-locationfill text-orange" ></text>
							{{item.address}}
						</view>
					</view>
					<view class="action" bind:tap="toInfo" id="{{item.id}}">
						<view class="text-grey text-xs">¥ {{item.price_per}}</view>
						<view class="cuIcon-favorfill text-yellow sm"> {{item.rateValue}}</view>
					</view>
					<checkbox value="{{index}}" wx:if="{{isInstantShare}}"/>
					<view class="move">
						<view class="bg-cyan light" id="{{index}}" bindtap = "topItem">置顶</view>
						<view class="bg-red light" id="{{index}}" bindtap = "deleteItem">删除</view>
					</view>
				</view>
			</view>
	  </checkbox-group>
	  <block  wx:if="{{isInstantShare}}">
		  <van-button round size="large" color="linear-gradient(to right, #4bb0ff, #6149f6)" bind:click="shareItems">分享</van-button>
	  </block>

	<image wx:if="{{friendsIndex=='self'}}" class="shadow share" src="../../images/share.png" bindtap="share"></image>
</block>
<block wx:else>
	<view class="noData">---暂无数据---</view>
</block>
<view class="cu-modal {{isShowModal?'show':''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white justify-end">
      <view class="content">分享给朋友</view>
      <view class="action" bindtap="hideModal">
        <text class="cuIcon-close text-red"></text>
      </view>
    </view>
    <view class="padding-xl">
      分享分为即时分享和永久分享
    </view>
    <view class="cu-bar bg-white">
      <view class="action margin-0 flex-sub " bindtap="instantShare">
        <text class="cuIcon-we"></text>即时分享</view>
      <view class="action margin-0 flex-sub solid-left" bindtap="hideModal">取消</view>
	<view class="action margin-0 flex-sub " bindtap="foreverShare">
        <text class="cuIcon-wefill"></text>永久分享</view>
      
    </view>
  </view>
</view>


