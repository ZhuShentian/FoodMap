@import "../../style/colorui.wxss";
@import "../../style/icon.wxss";
.search_input{
  background-color: #eee;
  margin:5px;
  width: 730rpx;
  height: 80rpx;
}
.input-placeholder{
  text-align: center;
}
.avatar{
  width: 100%;
  width: 100%;
}
.noData{
  position: relative;
  top: 50vh;
  text-align: center;
}
.input-box{
  height: 30vh;
  width: 80vw;
  position: relative;
  top: 30vh;
  left: 10vw;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: lightblue solid 1px;
  overflow: hidden;
  box-shadow: 0 4px 6px rgba(50,50,93,.11), 0 1px 3px rgba(0,0,0,.08);
}
.inputCode{
  text-align: center;
  height: 20vh;
  width: 80vw;
  font-size: 50rpx;
  border: solid gainsboro 1px;
 
}
.button-box{
  height: 10vh;
  width: 100%;
  display: flex;
  flex-direction: row;
}
.right{
  height: 100%;
  width: 40vw;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 50rpx;
}
.left{
 border-right: solid lightblue 1px;
}
.item-box{
  display: flex;
  flex-direction: row;
}

/*居中--弹性--竖向--中间*/
.middle-flex-column-center{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/*居中--弹性--横向--中间*/
.middle-flex-row-center{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.posterText{
  border-bottom: solid 1px #1078e7;
}