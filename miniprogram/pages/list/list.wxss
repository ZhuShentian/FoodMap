@import "../../style/colorui.wxss";
@import "../../style/icon.wxss";
.search_input{
  background-color: #eee;
  margin:5px;
  width: 730rpx;
  height: 80rpx;
}
.input-placeholder{
  text-align: center;
}
.avatar{
  width: 100%;
  width: 100%;
}

.input-box{
  height: 30vh;
  width: 80vw;
  position: relative;
  top: 30vh;
  left: 10vw;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: lightblue solid 1px;
  overflow: hidden;
  box-shadow: 0 4px 6px rgba(50,50,93,.11), 0 1px 3px rgba(0,0,0,.08);
}
.inputCode{
  text-align: center;
  height: 20vh;
  width: 80vw;
  font-size: 50rpx;
  border: solid gainsboro 1px;
 
}
.button-box{
  height: 10vh;
  width: 100%;
  display: flex;
  flex-direction: row;
}
.right{
  height: 100%;
  width: 40vw;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 50rpx;
}
.left{
 border-right: solid lightblue 1px;
}
.item-box{
  display: flex;
  flex-direction: row;
}

/*居中--弹性--竖向--中间*/
.middle-flex-column-center{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/*居中--弹性--横向--中间*/
.middle-flex-row-center{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.posterText{
  border-bottom: solid 1px #1078e7;
}
.showMap{
  height: 14vw;
  width: 14vw;
  position: fixed;
  bottom: 4vh;
  right: 4vw;
  z-index: 100;
  opacity: 0.6;
}
.img-switch-style{
  height: 14vw;
  width: 14vw;
  position: fixed;
  bottom: 4vh;
  right: 43vw;
  z-index: 104;
 }
 .img-box,.img-box2 {
  position: fixed;
  bottom: 4vh;
  right: 40vw;
  z-index: 100;
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 0;
  height: 20vw;
  width: 20vw;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
 }
 .img-box2{
  height: 12vw;
  width: 12vw;
  background-color: transparent;
  border-radius: 0;
 }
 .img {
  height: 12vw;
  width: 12vw;
  z-index: 100;
 }
