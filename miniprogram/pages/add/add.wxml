			<van-tabs active="{{ active }}" bind:click="tabClick">
			<block wx:for="{{tabList}}" wx:key="index">
			<van-tab title="{{item}}"></van-tab>
			</block>
		</van-tabs>
	-->




	<view class="cu-bar bg-white margin-top">
		<view class="action">
			图片上传(小于1M)
		</view>
		<view class="action">
			{{imgList.length}}/6
		</view>
	</view>
	<view class="cu-form-group upImage">
		<van-uploader
		 max-count='6'
		 bind:delete="DelImg"
		 file-list="{{ fileList }}"
		 bind:after-read="afterRead"
		 max-size="1000000"
		/>

	</view>
	
	<van-button round size="large" color="linear-gradient(to right, #4bb0ff, #6149f6)" bind:click="createItem">保存</van-button>



