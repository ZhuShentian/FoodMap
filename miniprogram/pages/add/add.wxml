			<van-tabs active="{{ active }}" bind:click="tabClick">
			<block wx:for="{{tabList}}" wx:key="index">
			<van-tab title="{{item}}"></van-tab>
			</block>
		</van-tabs>
	-->
   <view class="modules_box modules_answer_box" wx:for="{{store.special_list}}" wx:key="unique">
      <view class="modules_input_box">
         <input bindinput="checkSpecial" class="modules_input" data-index="{{index}}" maxlength="20" placeholder="特色菜{{index+1}}" value="{{item}}"></input>
      </view>
      <view bindtap="subSpecial" class="modules_icon_box" data-index="{{index}}">
         <image class="modules_icon" mode="scaleToFill" src="https://gamesdata.oss-cn-hangzhou.aliyuncs.com/xiaojueding/icon_edit_sub_60.png"></image>
      </view>			
   </view>

   <view bindtap="addSpecial" class="modules_box modules_add_box" wx:if="{{store.special_list.length<10}}">
      <view class="modules_word_box">
         <view class="modules_word">添加美食菜品</view>
      </view>
	    <view class="modules_icon_box">
         <image class="modules_icon" mode="scaleToFill" src="https://gamesdata.oss-cn-hangzhou.aliyuncs.com/xiaojueding/icon_edit_add_60.png"></image>
      </view>		
   </view>

