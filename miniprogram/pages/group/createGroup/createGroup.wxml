<!--miniprogram/pages/group/createGroup/createGroup.wxml-->
<cu-custom bgColor="bg-gradual-pink" isCustom="{{true}}"isBack="{{true}}">
	<view slot="content">创建美食圈子</view>
</cu-custom>
<view class="userInfo">
	<image bindtap="changeAvatar" src="{{avatarUrl==''?'../../../images/user.png':avatarUrl}}" class="avatar" />
</view>
<view class="cu-form-group">
	<view class="title">圈子名称</view>
	<input placeholder="美食圈子" bindinput="inputName" value="{{nickName}}"/>
</view>

<van-button round size="large" color="linear-gradient(to right, #4bb0ff, #6149f6)" bind:click="createGroup">创建</van-button>